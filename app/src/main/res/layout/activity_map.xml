<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Mapa con descripción accesible -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Mapa interactivo para mostrar la ubicación actual y el historial de rutas" />

    <!-- Botón para cambiar el tipo de vista del mapa -->
    <Button
        android:id="@+id/btnToggleMapType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar vista"
        android:contentDescription="Botón para cambiar la vista del mapa entre satélite y estándar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />
</RelativeLayout>
